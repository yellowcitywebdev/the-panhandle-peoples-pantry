---
import Container from "../components/Container.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import SectionHead from "../components/PageBanner.astro";
import CtaBanner from "../components/CtaBanner.astro";

const title = "Donations";
const desc = "";
const image = "/hero-inner.webp";
---

<BaseLayout title="Donations" description="Ways you can donate P³">
  <SectionHead title={title} desc={desc} image={image} />
  <Container>
    <div class="mx-auto max-w-4xl rounded-lg p-6 py-24">
      <h1 class="text-center text-3xl font-bold text-primary-700">
        Support P³: Donations
      </h1>

      <!-- Types of Donations -->
      <section class="mt-6">
        <h2 class="pb-2 text-2xl font-semibold text-primary-600">
          What Donations We Accept
        </h2>
        <div class="text-lg text-gray-600 dark:text-white">
          <p>
            Your support helps us provide fresh, nutritious food to our
            community. We gladly accept:
          </p>
          <ul class="mt-4 list-disc pl-6">
            <li>
              <strong>Monetary Donations:</strong> Helps us purchase food and cover
              operational costs.
            </li>
            <li>
              <strong>Non-Perishable Foods:</strong> Canned goods, rice, pasta, dried
              beans, and more.
            </li>
            <li>
              <strong>Fresh Produce:</strong> Fruits, vegetables, and herbs from
              local gardens.
            </li>
            <li>
              <strong>Personal Care Items:</strong> Soap, toothpaste, deodorant,
              and hygiene products.
            </li>
            <li>
              <strong>Reusable Bags & Containers:</strong> Helps us reduce waste
              and distribute food sustainably.
            </li>
          </ul>
        </div>
      </section>

      <!-- How to Deliver Donations -->
      <section class="mt-6">
        <h2 class="pb-2 text-2xl font-semibold text-primary-600">
          How to Deliver Your Donation
        </h2>
        <div class="text-lg text-gray-600 dark:text-white">
          <p>You can drop off donations at the following locations:</p>
          <ul class="mt-4 list-disc pl-6">
            <li>
              <strong>Main Distribution Center:</strong> 207 N. Tyler St., Amarillo,
              TX 79107
            </li>
            <li>
              <strong>Partner Locations:</strong> Various community hubs – contact
              us for details.
            </li>
            <li>
              <strong>By Appointment:</strong> Schedule a time for large donations
              or special arrangements.
            </li>
          </ul>
          <p class="mt-4">
            For questions or to arrange a pickup, <a
              href="/contact"
              class="text-primary-500 hover:underline">contact us</a
            > today!
          </p>
        </div>
      </section>

      <!-- Other Ways to Support -->
      <section class="mt-6">
        <h2 class="text-2xl font-semibold text-primary-600">
          Other Ways to Support
        </h2>
        <div class="text-lg text-gray-600 dark:text-white">
          <ul class="mt-4 list-disc pl-6">
            <li>
              <strong>Volunteer:</strong> Help us distribute food and support our
              mission.
            </li>
            <li>
              <strong>Spread the Word:</strong> Share our mission with friends, family,
              and local businesses.
            </li>
          </ul>
        </div>
      </section>

      <footer class="mt-8 text-center text-sm text-gray-500 dark:text-gray-300">
        <p>
          Thank you for supporting food liberation and community empowerment!
        </p>
      </footer>
    </div>
  </Container>
  <CtaBanner />
</BaseLayout>
