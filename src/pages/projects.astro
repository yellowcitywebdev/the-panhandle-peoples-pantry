---
import Container from "../components/Container.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import SectionHead from "../components/PageBanner.astro";
import CtaBanner from "../components/CtaBanner.astro";

const title = "Our Projects";
const desc = "";
const image = "/hero-inner.webp";
---

<BaseLayout title="Gallery" description="Gallery">
  <SectionHead title={title} desc={desc} image={image} />
  <Container>
    <div class="max-w-screen-xl items-center md:flex">
      <div class="p-5 lg:w-1/2">
        <div class="text prose">
          <span
            class="border-b-2 border-primary-500 uppercase text-gray-500 dark:text-gray-200"
            >Project Name</span
          >
          <h2
            class="my-4 text-3xl font-bold text-gray-600 dark:text-white sm:text-4xl"
          >
            Project <span class="text-primary-500">Description</span>
          </h2>
        </div>
      </div>
    </div>
    <div class="grid grid-cols-3 gap-4">
      <div class="grid gap-4">
        <div class="aspect-w-1 aspect-h-1">
          <img
            class="h-full w-full rounded-lg object-cover"
            src="https://flowbite.s3.amazonaws.com/docs/gallery/masonry/image.jpg"
            alt=""
          />
        </div>
        <div class="aspect-w-1 aspect-h-1">
          <img
            class="h-full w-full rounded-lg object-cover"
            src="https://flowbite.s3.amazonaws.com/docs/gallery/masonry/image-1.jpg"
            alt=""
          />
        </div>
        <div class="aspect-w-1 aspect-h-1">
          <img
            class="h-full w-full rounded-lg object-cover"
            src="https://flowbite.s3.amazonaws.com/docs/gallery/masonry/image-2.jpg"
            alt=""
          />
        </div>
      </div>
      <div class="grid gap-4">
        <div class="aspect-w-1 aspect-h-1">
          <img
            class="h-full w-full rounded-lg object-cover"
            src="https://flowbite.s3.amazonaws.com/docs/gallery/masonry/image-3.jpg"
            alt=""
          />
        </div>
        <div class="aspect-w-1 aspect-h-1">
          <img
            class="h-full w-full rounded-lg object-cover"
            src="https://flowbite.s3.amazonaws.com/docs/gallery/masonry/image-4.jpg"
            alt=""
          />
        </div>
        <div class="aspect-w-1 aspect-h-1">
          <img
            class="h-full w-full rounded-lg object-cover"
            src="https://flowbite.s3.amazonaws.com/docs/gallery/masonry/image-5.jpg"
            alt=""
          />
        </div>
      </div>
      <div class="grid gap-4">
        <div class="aspect-w-1 aspect-h-1">
          <img
            class="h-full w-full rounded-lg object-cover"
            src="https://flowbite.s3.amazonaws.com/docs/gallery/masonry/image-6.jpg"
            alt=""
          />
        </div>
        <div class="aspect-w-1 aspect-h-1">
          <img
            class="h-full w-full rounded-lg object-cover"
            src="https://flowbite.s3.amazonaws.com/docs/gallery/masonry/image-7.jpg"
            alt=""
          />
        </div>
        <div class="aspect-w-1 aspect-h-1">
          <img
            class="h-full w-full rounded-lg object-cover"
            src="https://flowbite.s3.amazonaws.com/docs/gallery/masonry/image-8.jpg"
            alt=""
          />
        </div>
      </div>
    </div>

    <div class="mx-auto max-w-screen-sm pb-36 pt-16 text-center">
      <a
        href="/contact"
        class="bg-primary-500 px-4 py-4 text-center text-lg font-bold text-white hover:bg-primary-600 dark:bg-primary-600 dark:hover:bg-primary-700"
      >
        Get A Free Quote
      </a>
    </div>
  </Container>
  <CtaBanner />
</BaseLayout>
