---
import Container from "../components/Container.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<div class="bg-white dark:bg-gray-800">
  <BaseLayout title="404 Not Found" description="404 Page">
    <Container>
      <div class="flex min-h-[calc(100vh-16rem)] items-center justify-center">
        <div class="mt-16 text-center">
          <h1
            class="text-4xl font-bold text-gray-900 dark:text-white lg:text-5xl lg:tracking-tight"
          >
            404
          </h1>
          <p class="mt-4 text-lg text-gray-600 dark:text-gray-300">
            Page not found.
          </p>
        </div>
      </div>
    </Container>
  </BaseLayout>
</div>
