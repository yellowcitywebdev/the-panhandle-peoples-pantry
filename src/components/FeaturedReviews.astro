---
import ReviewCard from "../components/ReviewCard.astro";
---

<div>
  <div class="max-w-screen-xl items-center md:flex">
    <div class="p-5 lg:w-1/2">
      <div class="text prose">
        <span
          class="border-b-2 border-primary-500 uppercase text-gray-500 dark:text-gray-200"
          >Our Reviews</span
        >
        <h2
          class="my-4 text-3xl font-bold text-gray-600 dark:text-white sm:text-4xl"
        >
          See What <span class="text-primary-500">People</span> Are Saying
        </h2>
        <div class="text-justify text-gray-700 dark:text-gray-200">
          <p>
            Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aliquid,
