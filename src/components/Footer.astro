---
import Brand from "./BrandFooter.astro";
const today = new Date();

const footerLinks = [
  {
    title: "Navigation",
    children: [
      { title: "Home", path: "/" },
      { title: "About Us", path: "/about" },
      { title: "Membership", path: "/membership" },
      { title: "Shop", path: "/shop" },
      { title: "Donations", path: "/donations" },
      { title: "Contact Us", path: "/contact" },
    ],
  },
  {
    title: "Legal",
    children: [
      { title: "Bylaws", path: "/bylaws" },
      { title: "Code of Conduct", path: "/codeofconduct" },
      { title: "Financials", path: "/financials" },
    ],
  },
  {
    title: "Contact",
    children: [
      { title: "207 N. Tyler st.\nAmarillo, TX 79107", path: "" },
      { title: "(806) 410-0584", path: "" },
      { title: "panhandlepeoplespantry@gmail.com", path: "" },
    ],
  },
];
---

<style>
  .address {
    white-space: pre-line; /* Maintains line breaks */
  }
</style>

<footer class="bg-secondary-700 dark:bg-secondary-800">
  <div class="mx-auto w-full max-w-screen-xl px-0 pb-8 pt-12 sm:px-4 lg:pt-24">
    <div class="pb-8 md:justify-between lg:flex">
      <div class="mb-6 md:mb-12">
        <Brand />
      </div>
      <div
        class="mx-12 grid grid-cols-1 gap-8 sm:gap-6 md:grid-cols-2 lg:mx-0 lg:grid-cols-3 lg:gap-0"
      >
        {
          footerLinks.map((item) => (
            <>
              <div>
                <h2 class="mb-6 w-1/2 text-sm font-bold uppercase text-gray-100">
                  {item.title}
                  <hr class="mt-2 w-full border-t-2 border-accent-300" />
                </h2>

                {/* conditional that makes a link if path is not empty */}
                <ul class="font-normal text-gray-500 dark:text-gray-400">
                  {item.children.map((child) => (
                    <li class="mb-4">
                      {child.path ? (
                        <a
                          href={child.path}
                          class="address text-white hover:text-accent-300 hover:underline"
                        >
                          {child.title}
                        </a>
                      ) : (
                        <span class="address text-white">{child.title}</span>
                      )}
                    </li>
                  ))}
                </ul>
              </div>
            </>
          ))
        }
      </div>
    </div>
    <hr
      class="my-6 border-t-2 border-accent-300 dark:border-gray-700 sm:mx-auto lg:my-8"
    />
    <!-- info  -->
    <div class="sm:flex sm:items-center sm:justify-between">
      <div>
        <span class="text-sm text-gray-300 dark:text-gray-400 sm:text-center"
