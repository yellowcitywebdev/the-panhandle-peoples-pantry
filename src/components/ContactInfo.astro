---
const contactInfo = {
  phone: {
    number: "(806) 410-0584",
    copyText: "806-410-0584",
  },
  email: {
    address: "panhandlepeoplespantry@gmail.com",
    copyText: "panhandlepeoplespantry@gmail.com",
  },
  address: {
    line1: "207 N. Tyler St.",
    line2: "Amarillo, TX 79107",
    copyText: "207 N. Tyler St., Amarillo, TX 79107",
  },
};
---

<section class="bg-white dark:bg-gray-800">
  <div class="mx-auto max-w-screen-xl px-4 py-8 lg:-mr-6 lg:px-6">
    <div
      class="grid space-y-8 sm:gap-12 md:grid-cols-3 md:space-y-0 lg:grid-cols-1"
    >
      <div
        class="flex transform cursor-pointer flex-col items-center justify-start rounded-lg bg-gray-50 p-4 shadow-xl transition-all duration-300 hover:shadow-2xl dark:bg-gray-900"
        onclick={`copyToClipboard('${contactInfo.phone.copyText}')`}
        aria-label="click for phone number"
      >
        <div
          class="mb-4 flex h-10 w-10 items-center justify-center rounded-full bg-primary-100 dark:bg-primary-900 lg:h-12 lg:w-12"
        >
          <svg
            class="h-5 w-5 text-primary-600 dark:text-primary-300 lg:h-6 lg:w-6"
            fill="currentColor"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
          >
            <path
              d="M7.978 4a2.553 2.553 0 0 0-1.926.877C4.233 6.7 3.699 8.751 4.153 10.814c.44 1.995 1.778 3.893 3.456 5.572 1.68 1.679 3.577 3.018 5.57 3.459 2.062.456 4.115-.073 5.94-1.885a2.556 2.556 0 0 0 .001-3.861l-1.21-1.21a2.689 2.689 0 0 0-3.802 0l-.617.618a.806.806 0 0 1-1.14 0l-1.854-1.855a.807.807 0 0 1 0-1.14l.618-.62a2.692 2.692 0 0 0 0-3.803l-1.21-1.211A2.555 2.555 0 0 0 7.978 4Z"
            ></path>
          </svg>
        </div>
        <h3 class="mb-2 text-xl font-bold dark:text-white">Phone:</h3>
        <p class="text-gray-500 dark:text-gray-400">
          {contactInfo.phone.number}
        </p>
      </div>
      <div
        class="flex transform cursor-pointer flex-col items-center justify-start rounded-lg bg-gray-50 p-4 shadow-xl transition-all duration-300 hover:shadow-2xl dark:bg-gray-900"
        onclick={`copyToClipboard('${contactInfo.email.copyText}')`}
        aria-label="click for email"
      >
        <div
          class="mb-4 flex h-10 w-10 items-center justify-center rounded-full bg-primary-100 dark:bg-primary-900 lg:h-12 lg:w-12"
        >
          <svg
            class="h-5 w-5 text-primary-600 dark:text-primary-300 lg:h-6 lg:w-6"
            fill="currentColor"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
          >
            <path
              d="m3.62 6.389 8.396 6.724 8.638-6.572-7.69-4.29a1.975 1.975 0 0 0-1.928 0L3.62 6.39Z"
            ></path>
            <path
              d="m22 8.053-8.784 6.683a1.978 1.978 0 0 1-2.44-.031L2.02 7.693a1.091 1.091 0 0 0-.019.199v11.065C2 20.637 3.343 22 5 22h14c1.657 0 3-1.362 3-3.043V8.053Z"
            ></path>
          </svg>
        </div>
        <h3 class="mb-2 text-xl font-bold dark:text-white">Email:</h3>
        <p class="text-gray-500 dark:text-gray-400">
          {contactInfo.email.address}
        </p>
      </div>

      <!-- make parent div max xl if using addy card -->
      <div
        class="flex transform cursor-pointer flex-col items-center justify-start rounded-lg bg-gray-50 p-4 shadow-xl transition-all duration-300 hover:shadow-2xl dark:bg-gray-900"
        onclick={`copyToClipboard('${contactInfo.address.copyText}')`}
        aria-label="click for address"
      >
        <div
          class="mb-4 flex h-10 w-10 items-center justify-center rounded-full bg-primary-100 dark:bg-primary-900 lg:h-12 lg:w-12"
        >
          <svg
            class="h-5 w-5 text-primary-600 dark:text-primary-300 lg:h-6 lg:w-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              fill-rule="evenodd"
              d="M11.906 1.994a8.002 8.002 0 0 1 8.09 8.421 7.996 7.996 0 0 1-1.297 3.957.996.996 0 0 1-.133.204l-.108.129c-.178.243-.37.477-.573.699l-5.112 6.224a1 1 0 0 1-1.545 0L5.982 15.26l-.002-.002a18.146 18.146 0 0 1-.309-.38l-.133-.163a.999.999 0 0 1-.13-.202 7.995 7.995 0 0 1 6.498-12.518ZM15 9.997a3 3 0 1 1-5.999 0 3 3 0 0 1 5.999 0Z"
              clip-rule="evenodd"></path>
          </svg>
        </div>
        <h3 class="mb-2 text-xl font-bold dark:text-white">Or stop by</h3>
        <p class="text-gray-500 dark:text-gray-400">
          {contactInfo.address.line1}
        </p>
        <p class="text-gray-500 dark:text-gray-400">
          {contactInfo.address.line2}
        </p>
      </div>
    </div>
  </div>
</section>

<script is:inline>
  function copyToClipboard(text) {
    navigator.clipboard.writeText(text).then(
      () => {
        alert(text + " copied to clipboard!");
      },
      (err) => {
        alert("Failed to copy text: ", err);
      },
    );
  }
</script>
